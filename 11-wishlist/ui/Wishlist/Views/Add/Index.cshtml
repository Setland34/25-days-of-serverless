@model WishListItemModel

@{
    ViewData["Title"] = "Add Message";
}

<div class="text-center">
    <h1 class="display-4">Add a message to the Naughty or Nice List</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Wish" class="control-label"></label>
                    <input asp-for="Wish" class="form-control" />
                    <span asp-validation-for="Wish" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type"class="form-control" required>
                        <option>Toy</option>
                        <option>Clothes</option>
                        <option>Animal</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>